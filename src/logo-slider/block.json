{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "simblock/logo-slider",
  "version": "1.0.0",
  "title": "Logo Slider",
  "category": "widgets",
  "icon": "info outline",
  "description": "The Logo Carousel will create.",
  "attributes": {
    "enableImageIcon": {
      "type": "boolean",
      "default": true
    },
    "mediaImageId": {
      "type": "string",
      "default": ""
    },
    "contents": {
      "type": "string",
      "source": "html",
      "selector": ".text-content"
    },
    "title": {
      "type": "string",
      "selector": "h1",
      "default": "Info Title"
    },
    "titleClass": {
      "type": "string",
      "default": "pb-4 text-2xl font-semibold text-center"
    },
    "list": {
      "type": "array"
    },
    "content": {
      "type": "string",
      "source": "html",
      "selector": "p"
    },
    "alignment": {
      "type": "string",
      "default": "none"
    },
    "bg_color": { "type": "string", "default": "#000000" },
    "text_color": { "type": "string", "default": "#ffffff" }
  },
  "supports": {
    "html": false,
    "align": ["left", "right", "full"]
  },
  "textdomain": "simblock",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./admin-style.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js"
}
